<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Xolair Asthma Journey</name>

    <description>
        An application for elearning
    </description>

    <author href="http://www.chameleon-uk.com/" email="development@chameleon-uk.com">
        Chameleon Communications International
    </author>

    <icon src="76_ER_Icon.png" gap:platform="ios" width="76" height="76" />
    <icon src="152_ER_Icon.png" gap:platform="ios" width="152" height="152" />

    <preference name="DisallowOverscroll" value="true" />
    <preference name="orientation" value="landscape" />
    <preference name="webviewbounce" value="false" />

    <gap:splash src="splash.png" gap:platform="ios" width="1024" height="768" />
    <gap:splash src="splash@2x.png" gap:platform="ios" width="2048" height="1536" />

    <gap:plugin name="de.appplant.cordova.plugin.hidden-statusbar-overlay" />
    <gap:plugin name="com.telerik.plugins.wkwebview" version="0.2.5" />

</widget>